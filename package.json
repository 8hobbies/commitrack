{
  "name": "commitrack",
  "version": "1.0.0",
  "private": true,
  "description": "Commit Tracker",
  "license": "AGPL-3.0-or-later",
  "author": "8 Hobbies, LLC",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/*.ts *.mjs && prettier . --check",
    "build": "npm run compile",
    "build_container_img": "${DOCKER_CMD:-podman} build . -t commitrack-dev",
    "start_container": "${DOCKER_CMD:-podman} compose up --detach",
    "stop_container": "${DOCKER_CMD:-podman} compose down",
    "test": "./scripts/run_tests.sh",
    "test_live": "./scripts/init_test_db.sh && vitest --run docker.test.ts",
    "format": "eslint --fix src/*.ts *.mjs && prettier . --write",
    "compile": "tsc -p tsconfig.prod.json && tsc -p tsconfig.test.json",
    "dev": "npm run build && node dist/index.js"
  },
  "devDependencies": {
    "@8hobbies/eslint-conf-baseline": "^6.0.0",
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.0.2",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.0.2"
  },
  "dependencies": {
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@prisma/client": "^6.2.1",
    "fastify": "^5.2.1"
  }
}
